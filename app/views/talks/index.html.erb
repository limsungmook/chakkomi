<% if user_signed_in? %>
<%= render 'form' %>
<% end %>
<div id="talk">
<table>
<% @talks.each do |talk| %>
  <tr>
    <td><span class="talk_content"><%= link_to talk.content, talk %></span></td> 
    <td><span class="talk_username"><%= talk.user.name %></span></td>
    <td><span class="talk_delete"><%= button_to '삭제하기', talk, :confirm => '삭제하시겠습니까?', :method => :delete %></span></td> 
  </tr>
<% end %>
</table>
</div>
