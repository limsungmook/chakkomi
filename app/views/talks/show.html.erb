<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @talk.user.name %>
</p>

<p>
  <b>Content:</b>
  <%= @talk.content %>
</p>
<p>
  <b>Time ago:</b>
  <%= time_ago_in_words(@talk.created_at) %>
</p>


<% @talk.relays.each do |relay| %> 
<%= relay.user.name %> - <%= relay.content %> - <%= time_ago_in_words(relay.created_at) %> ago
<% if user_signed_in? and relay.user_id == current_user.id %>
<%= link_to 'delete', talk_relay_path(@talk, relay), :confirm => '삭제하시겠습니까?', :method => :delete %>
<% end  %> 
<% end  %> 
<% if user_signed_in? %>
<% if current_user.name == nil or current_user.name == '' %>
<%= link_to "프로필", edit_user_registration_path %> 에서 이름을 적어주세요.
<% else %>
<%= current_user.name %>
<%= form_for [@talk, current_user.relays.new] do |f| %>
  <%= f.text_area :content %>
  <%= f.submit "릴레이 추가" %>
<% end %>
<% end %>
<% end %>
<% if user_signed_in? and @talk.user_id == current_user.id %>
<%= link_to 'Edit Talk', edit_talk_path(@talk) %> |
<% end %>
<%= link_to 'Back to Talks', talks_path %>
