  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= image_tag product.thumnail_pic(:thumb) %></td>
    <td><%= product.title %></td>
    <td><%= number_with_delimiter( product.price ) %>원</td>
    <td><%= product.delivery_state %></td>
    <td><%= product.stock %></td>
    <td><%= product.state %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= button_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

