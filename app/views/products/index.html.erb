<h1>Listing products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Thumnail pic</th>
    <th>Content pic</th>
    <th>Content</th>
    <th>Price</th>
    <th>Delivery state</th>
    <th>Stock</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.thumnail_pic %></td>
    <td><%= product.content_pic %></td>
    <td><%= product.content %></td>
    <td><%= product.price %></td>
    <td><%= product.delivery_state %></td>
    <td><%= product.stock %></td>
    <td><%= product.state %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

