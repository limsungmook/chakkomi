<script type="text/javascript">
$(function(){
	if ($("#product_list").length)
	{
	    $('#product_detail_wrapper').html('<%= escape_javascript(render('detail')) %>');
	    $("#product_list_ul li").each(function(){
		    $(this).css("background", "#FFFFFF");
		});
	    $("#product_list_ul .product_<%= @product.id %>").css("background", "#4f2f3f");
	    
	    var switchTo5x=true;
	    $.getScript("http://w.sharethis.com/button/buttons.js", function(){
		    var State = History.getState();
		    stLight.options({publisher:'946d14c5-62b3-4999-bb63-eb17baf5da56'});
		    $('#fb-like-example').onefblike({appID:'213249652066160'});
		    $(".st_facebook_large").attr({st_url: State.url});
		    $(".st_twitter_large").attr({st_url: State.url});
		    $(".st_gbuzz_large").attr({st_url: State.url});
		    $(".st_email_large").attr({st_url: State.url});
		    $(".st_sharethis_large").attr({st_url: State.url});
		});
	}else
	{
	    $('#laydesk_shop_body').fadeOut('10000', function(){

		    $('#laydesk_shop_body').html('<%= escape_javascript(render('show')) %>').fadeIn('slow', function(){
			    $("#list_first").css("background", "#FFFFFF");
			    $("#product_list_ul .product_<%= @product.id %>").css("background", "#4f2f3f");
			    
			    var switchTo5x=true;
			    $.getScript("http://w.sharethis.com/button/buttons.js", function(){
				    var State = History.getState();
				    stLight.options({publisher:'946d14c5-62b3-4999-bb63-eb17baf5da56'});
				    $('#fb-like-example').onefblike({appID:'213249652066160'});
				    $(".st_facebook_large").attr({st_url: State.url});
				    $(".st_twitter_large").attr({st_url: State.url});
				    $(".st_gbuzz_large").attr({st_url: State.url});
				    $(".st_email_large").attr({st_url: State.url});
				    $(".st_sharethis_large").attr({st_url: State.url});
				});
			});
		});
	}
	

    });
</script>
