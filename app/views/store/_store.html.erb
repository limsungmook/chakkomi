<div id="body_title">
<hr />
</div>
<div id="item_category_list">
  <table>
    <% @item_categories.each_with_index do |item_category, index| %>
        <% if (index % 4) == 0 %>
        <tr>
	<% end %>
	<td>
	  <div class="entry" >
	    <%= link_to image_tag(item_category.thumnail_pic.url(:thumb), :class => "entry_image"), {:controller=>"store", :action => 'show', :id=>item_category}, {:title =>  item_category.name, :class => "shop_item_category", :remote => true } %><br />
	  </div>
	</td>
	<% if (index % 4) == 3 %>
        </tr>
        <% end %>
    <% end %>
  </table>
</div>
