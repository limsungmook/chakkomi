<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>착한곰팡이</title>
  <%= stylesheet_link_tag :application, :cache => true %>
  <%= javascript_include_tag :application, :cache => true %>
  <%= csrf_meta_tag %>
 <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Poly"> 
<link rel="stylesheet" type="text/css" href="http://nanumgothic.appspot.com/css" />
  
  <!-- login 성공시 돌아오기 위한 세션  저장-->
  <% session[:back_url] = url_for(:controller=>'/articles', :action => 'chakkomi') %>
  <script type="text/javascript">
     $(function(){
	     $("body").css("display", "none");
	     $("body").fadeIn(1000);
	     
	     var default_width = 0;
	     var default_height = 0;
             var textshadow_option = {
	     x: 4,
	     y: 4,
	     radius: 4,
	     color: "#00a1ce"
	     }
	     $(".home_link_icon").hover(function(){
		     default_width = parseInt($(this).css('width'));
		     default_height = parseInt($(this).css('height'));
		     $(this).css('width', default_width * 1.2);
		     $(this).css('height', default_height * 1.2);
		     
		 },
		 function() {
		     $(this).css('width', default_width);
		     $(this).css('height', default_height);
		 }
		 );
	     $("#laydesk_default_sidebar_menu a").hover(function(){
		     $(this).textShadow(textshadow_option);
		 },
		 function(){
		     $(this).textShadowRemove();
		 });
	     
	     
     $('#loading').hide();

     // bind clicks
     $(".store_link").click(function(){
     $('#laydesk').html('<%= escape_javascript(render('store/loading')) %>');
  });
  });
  </script>
</head>

<body>
  <div id="laydesk_outer">
    <div id="laydesk" class="laydesk">

      <div id="laydesk_default">
	<div id="laydesk_default_sidebar">

	  <div id="laydesk_default_sidebar_logo">
	    <%= link_to image_tag("/assets/logo_195x79.png"), {:controller=>'/articles', :action => 'chakkomi'}, :remote => true, :class => "ajax_link"  %>
	  </div>
	  <div id="laydesk_default_sidebar_menu" >
	    <ul>
														      
	      <li><%= link_to "NOTICE", {:controller=>'/articles', :action => 'notice'}, :remote => true, :class => "ajax_link" %></li>
	      <li>&nbsp;</li>
	      <li><%= link_to "CHAKKOMI", {:controller=>'/articles', :action => 'chakkomi'}, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to "PROJECT", {:controller=>'/articles', :action => 'project'}, :remote => true, :class => "ajax_link"  %></li>
	      <li><%= link_to "COMICS", {:controller=>'/articles', :action => 'comics'}, :remote => true, :class => "ajax_link" %></li><li>&nbsp;</li>
	      <li><%= link_to "PRODUCT", {:controller=>'/articles', :action => 'product'}, :remote => true, :class => "ajax_link"  %></li>
	      <li><%= link_to "STORE", {:controller=>'/store', :action => 'index'},  :class => "store_link"  %></li>
	      <li>&nbsp;</li>
	      <li><%= link_to "TALK", {:controller=>'/talks', :action => 'index', :mid => 'talk'}, :remote => true, :class => "ajax_link"  %></li>
	    </ul>

	  </div>
	  <div id="laydesk_default_sidebar_link">
	      <li><%= link_to image_tag("/assets/icon_fb_55x83.png", :class => "home_link_icon"), "http://www.facebook.com/chakkomi" %></li>
	      <li><%= link_to image_tag("/assets/icon_twt_50x83.png", :class => "home_link_icon"), "http://twitter.com/#!/chakkomi"  %></li>
	      <li><%= link_to image_tag("/assets/icon_wall_59x83.png", :class => "home_link_icon"), "#"  %></li>
	      <li><%= link_to image_tag("/assets/icon_shop_50x83.png", :class => "home_link_icon"), {:controller=>'/store', :action => 'index'} %></li>
	  </div>

	  <div id="laydesk_default_sidebar_ftr1">
	    <%= image_tag("/assets/default_copyright_190x35.png") %>
	  </div>

	</div><!-- #laydesk_default_sidebar -->
	
	<div id="laydesk_default_maj">
	  <!-- 테스트용으로 로그인되었을 때만 메뉴가 보이게함 -->
	  <% if user_signed_in? %>
	  <% if can? :magage, :all%>
	  <div id="laydesk_default_maj_hdr">
	    <div id="laydesk_default_maj_hdr_user">
	      <ul>
  		<li><%= link_to "관리자 페이지", :admins %></li>
		<% end %>
		<li><span id="currentuser"><%= current_user.email %></span></li>
		<li><%= link_to "Profile", edit_user_registration_path , :remote => true, :class => "ajax_link"%></li>
		<li><%= link_to "Setting", "/services" , :remote => true, :class => "ajax_link"%></li>
		<li><%= link_to "Log out", destroy_user_session_path%></li>
		<li><%= link_to "Create Account", new_user_registration_path , :remote => true, :class => "ajax_link" %></li>
		<li><%= link_to "Login", new_user_session_path, :remote => true, :class => "ajax_link" %></li>
	      </ul>
	    </div><!-- #laydesk_default_user -->
	  </div><!-- #laydesk_default_hdr -->
	  <% end %>

	  <div id="laydesk_default_body" class="laydesk_body">
	    <%= yield %>
	  </div>

	</div><!-- #laydesk_default_maj -->
      </div><!-- #laydesk_default -->
    </div><!-- #laydesk & .laydesk -->
  </div><!-- laydesk_default_outer -->
</body>
</html>
