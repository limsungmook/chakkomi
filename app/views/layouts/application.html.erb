<!DOCTYPE html>
<html>
<head>
  <title>착한곰팡이</title>
  <%= stylesheet_link_tag "reset-min", "fonts-min", "jquery-ui", "chakkomi", :cache => true %>
  <%= javascript_include_tag :application %>
  <%= javascript_include_tag "history.js/scripts/bundled/html4+html5/jquery.history.js","chakkomi", :cache => true %>
  <%= csrf_meta_tag %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Oswald">
<% session[:back_url] = '/store' %>
</head>
<body>
  <div id="laydesk_outer">
    <div id="laydesk" class="laydesk">
      <div class="laydesk_sidebar">
	<div class="laydesk_sidebar_logo">
	  <%= link_to image_tag("/assets/logo.png"), {:controller=>'/articles', :action => 'show', :id => '1', :category_name=>'intro', :one_article=>'1'}, :remote => true, :class => "ajax_link"  %>
	</div>
	<div class="laydesk_sidebar_menu" >
	  <ul>
	    <li><%= link_to "NOTICE", {:controller=>'/articles', :action => 'show',:id => '1', :category_name=>'notice', :one_article=>'1'}, :remote => true, :class => "ajax_link" %></li>
	    <li>&nbsp;</li>
	    <li><%= link_to "CHAKKOMI", {:controller=>'/articles', :action => 'show',:id => '1', :category_name=>'chakkomi'}, :remote => true, :class => "ajax_link" %></li>
	    <li><%= link_to "PROJECT", {:controller=>'/articles', :action => 'show',:id => '1', :category_name=>'project'}, :remote => true, :class => "ajax_link"  %></li>
	    <li><%= link_to "COMICS", {:controller=>'/articles', :action => 'show',:id => '1', :category_name=>'comics'}, :remote => true, :class => "ajax_link" %>&nbsp;</li>
	    <li><%= link_to "PRODUCT", {:controller=>'/articles', :action => 'show', :id => '1', :category_name=>'artmull'}, :remote => true, :class => "ajax_link"  %></li>
	    <li><%= link_to "STORE", {:controller=>'/store', :action => 'index'},  :class => "store_link"  %></li>
	    <li>&nbsp;</li>
	    <li><%= link_to "TALK", :talks, :remote => true, :class => "ajax_link"  %></li>
	  </ul>
	</div>
	<div class="laydesk_sidebar_links" >
	</div>
	<div class="laydesk_ftr1">
	  <h6>Copyright © </h6>
	</div>
      </div>    
      
      <div class="laydesk_maj">
	<div class="laydesk_hdr">
	  <div class="laydesk_user">
	    <ul>
	      <% if user_signed_in? %>
	      <% if can? :magage, :all%>
  	      <li><%= link_to "관리자 페이지", :admins %></li>
	      <% end %>
	      <li><span id="currentuser"><%= current_user.email %></span></li>
	      <li><%= link_to "Profile", edit_user_registration_path , :remote => true, :class => "ajax_link"%></li>
	      <li><%= link_to "Setting", "/services" , :remote => true, :class => "ajax_link"%></li>
	      <li><%= link_to "Log out", destroy_user_session_path%></li>
	      <% else %>
	      <li><%= link_to "Create Account", new_user_registration_path , :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to "Login", new_user_session_path, :remote => true, :class => "ajax_link" %></li>
	      <% end %>
	    </ul>
	  </div>
	  <div class="laydesk_title">
	  </div>
	</div>
	
	<div id="laydesk_body" class="laydesk_body">
	  <div id="flash">
	    <% flash.each do |key, value| %>
	    <div class="flash <%= key %>"><%= value %></div>
	    <% end %>
	  </div>
	    <%= yield %>
	</div>
      </div>
    </div>
<script type="text/javascript">
  $(function(){
  $(".store_link").click(function(){
    $('#laydesk').html('<%= escape_javascript(render('store/loading')) %>');
  });
});
</script>
</body>
</html>
