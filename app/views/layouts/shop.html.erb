<!DOCTYPE html>
<html>
<head>
  <title>착곰이샾</title>
  <%= stylesheet_link_tag "reset-min", "fonts-min", "jquery-ui", "chakkomi", :cache => true %>
  <%= javascript_include_tag :application %>
  <script>if ( typeof window.JSON === 'undefined') { document.write('<script src="http://dev.chakkomi.com/assets/history.js/scripts/compressed/json2.js"><\/script>'); }</script>
  <%= javascript_include_tag "history.js/scripts/compressed/amplify.store.js", "history.js/scripts/compressed/history.adapter.jquery.js", "history.js/scripts/compressed/history.js", "history.js/scripts/compressed/history.html4.js", "chakkomi", :cache => true %>

  <%= csrf_meta_tag %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Oswald">

  <% session[:back_url] = '/store' %>
</head>
<body>
  <div id = "laydesk_outer">
    <div id="laydesk" class="laydesk">
      <div id="laydesk_shop">
	<div id="laydesk_shop_hdr">
	  <div id="laydesk_shop_hdr_logo">
	    <%= link_to image_tag("/assets/logo.png", :class => 'logo'), {:controller=>'/articles', :action => 'intro'}  %>
	    <%= link_to image_tag("logo_shop_161x300.png", :class => 'logo_shop'), '/store' %>
	  </div>
	  <div id="laydesk_shop_hdr_menu">
	    <ul id="shop_menu_ul">
	      <li><%= link_to image_tag("/assets/btn_shop_list_default.png",  :title => 'btn_shop_list_default'), {:controller=>'/store', :action => 'index'}, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_cart_default.png",  :title => 'btn_shop_cart_default'), {:controller=>'/carts', :action => 'index'}, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_qna_default.png", :title => 'btn_shop_qna_default'), '#', :remote => true, :class => "ajax_link" %></li>
	      <% if user_signed_in? %>
	      <li><%= link_to image_tag("/assets/btn_shop_profile_default.png", :title => 'btn_shop_profile_default'), edit_user_registration_path, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_setting_default.png",:title => 'btn_shop_setting_default'), "/services", :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_logout_default.png",:title => 'btn_shop_logout_default'), destroy_user_session_path %></li>
	      <% else %>
	      <li><%= link_to image_tag("/assets/btn_shop_signup_default.png", :title => 'btn_shop_signup_default'), new_user_registration_path, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_signin_default.png", :title => 'btn_shop_signin_default'), new_user_session_path, :remote => true, :class => "ajax_link" %></li>
	      <% end %>
	    </ul>
	  </div>
	</div><!-- end: laydesk_shop_hdr -->
	<div id="laydesk_shop_main" class="laydesk_body">
	  <div id="flash">
	    <% flash.each do |key, value| %>
	    <div class="flash <%= key %>"><%= value %></div>
	    <% end %>
	  </div>
	    <%= yield %>
	</div>
      </div>
    </div>
  </div>
</body>
</html>
