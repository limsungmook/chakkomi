<!DOCTYPE html>
<html>
<head>
  <title>착곰이샾</title>
  <%= stylesheet_link_tag "reset-min", :media => "all" %>
  <%= stylesheet_link_tag "fonts-min", :media => "all" %>
  <%= stylesheet_link_tag "chakkomi", :media => "all" %>
  <%= stylesheet_link_tag "jquery-ui", :media => "all" %>
  <%= javascript_include_tag :application %>
  <script>if ( typeof window.JSON === 'undefined') { document.write('<script src="http://dev.chakkomi.com/assets/history.js/scripts/compressed/json2.js"><\/script>'); }</script>
  <%= javascript_include_tag "history.js/scripts/compressed/amplify.store.js" %>
  <%= javascript_include_tag "history.js/scripts/compressed/history.adapter.jquery.js" %>
  <%= javascript_include_tag "history.js/scripts/compressed/history.js" %>
  <%= javascript_include_tag "history.js/scripts/compressed/history.html4.js" %>
  <%= javascript_include_tag "chakkomi" %>

  <%= csrf_meta_tag %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Oswald">

<script type="text/javascript">
$(function(){
    $('#laydesk_outer').hide().delay('500').fadeIn('10000');
});
</script>

</head>
<body>
  <div id = "laydesk_outer">
    <div id="laydesk" class="laydesk">
      <div id="laydesk_shop">
	<div id="laydesk_shop_hdr">
	  <div id="laydesk_shop_hdr_logo">
	    <%= link_to image_tag("logo_shop_161x300.png"), '/store' %>
	  </div>
	  <div id="laydesk_shop_hdr_menu">
	    <ul id="shop_menu_ul">
	      <li><%= link_to image_tag("/assets/btn_shop_list_default.png",  :title => 'btn_shop_list_default'), {:controller=>'/store', :action => 'index'}, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_cart_default.png",  :title => 'btn_shop_cart_default'), {:controller=>'/carts', :action => 'index'}, :remote => true, :class => "ajax_link" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_qna_default.png", :title => 'btn_shop_qna_default'), '#' %></li>
	      <% if user_signed_in? %>
	      <li><%= link_to image_tag("/assets/btn_shop_profile_default.png", :title => 'btn_shop_profile_default'), edit_user_registration_path %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_setting_default.png",:title => 'btn_shop_setting_default'), "/services" %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_logout_default.png",:title => 'btn_shop_logout_default'), destroy_user_session_path %></li>
	      <% else %>
	      <li><%= link_to image_tag("/assets/btn_shop_signup_default.png", :title => 'btn_shop_signup_default'), new_user_registration_path %></li>
	      <li><%= link_to image_tag("/assets/btn_shop_signin_default.png", :title => 'btn_shop_signin_default'), new_user_session_path %></li>
	      <% end %>
	    </ul>
	  </div>
	</div><!-- end: laydesk_shop_hdr -->
	<div id="laydesk_shop_main">
	  <%= yield %>
	</div>
      </div>
    </div>
  </div>

</body>
</html>
