<div id = "intro_image">
  <%= link_to image_tag("/assets/intro.jpg"), {:controller=>'/articles', :action => 'show', :id => '1', :category_name=>'intro', :one_article=>'1'}, :remote => true, :class => "ajax_link" %>
</div>
<%  session[:skip_intro] = nil %>


<script type="text/javascript">
$('#laydesk').hide();
$('#intro_image').appendTo('#laydesk_outer');
$('#intro_image').hide().delay(300).fadeIn('3000');

$('a').click(function(){
  $('#intro_image').fadeOut('3000', function(){
    $('#laydesk').fadeIn('slow');
  });
});

</script>

