<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body_pic %><br />
    <%= f.text_field :body_pic %>
  </div>
  <div class="field">
    <%= f.label :body_txt %><br />
    <%= f.text_area :body_txt %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
