<%= render :partial => "/admins/admin_menu" %>
<%= link_to '이름순 정렬', {:controller => :admins, :action => :order_list, :order => 'name'} %>
<%= link_to '입금순 정렬', {:controller => :admins, :action => :order_list, :order => 'deposit'} %>
<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Account owner</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th>Arrival payment</th>
    <th>Total price</th>
    <th>Deposit check</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.user_id %></td>
    <td><%= order.name %></td>
    <td><%= order.account_owner %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= order.arrival_payment %></td>
    <td><%= order.total_price %></td>
    <td><%= order.deposit_check %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @orders %>
<%= link_to '새로운 주문', new_order_path %>
